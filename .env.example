# 发布脚本配置文件
# 复制这个文件为 .env 并修改相应的值

# GitHub配置
GITHUB_TOKEN=your_github_token_here
REPO_OWNER=your_username
REPO_NAME=your_repository_name

# 项目配置
ARCHIVE_PATH=./dist.zip
BUILD_DIR=./dist
PROJECT_TYPE=nodejs  # nodejs, python, go, rust, other

# 版本配置
DEFAULT_VERSION=v1.0.0
AUTO_INCREMENT=false  # 是否自动递增版本号

# 发布配置
CREATE_GIT_TAG=true
PUSH_TAG_TO_REMOTE=true
MARK_AS_LATEST=true
PRERELEASE=false

# 构建配置
RUN_BUILD=true
BUILD_COMMAND="npm run build"  # 自定义构建命令

# 文件过滤 (用逗号分隔)
INCLUDE_FILES="dist,README.md,LICENSE"
EXCLUDE_FILES="node_modules,.git,.env"
